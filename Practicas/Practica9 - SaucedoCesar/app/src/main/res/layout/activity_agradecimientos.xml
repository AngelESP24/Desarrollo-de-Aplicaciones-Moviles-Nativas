<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agradecimientos">

    <!-- TextViews para mostrar los datos ingresados por el usuario -->

    <TextView
        android:id="@+id/tituloAgradecimientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Muchas gracias por su compra"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultadoNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="-65dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="Nombre Completo: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/resultadoNombreID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloAgradecimientos"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultadoNombreID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resultadoNombre"
        app:layout_constraintTop_toBottomOf="@+id/tituloAgradecimientos"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultadoTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="-75dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="Telefono: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/resultadoTelefonoID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadoNombre"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultadoTelefonoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resultadoTelefono"
        app:layout_constraintTop_toBottomOf="@+id/resultadoNombre"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultadoTamanio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="-90dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="TamaÃ±o de la Pizza: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/resultadoTamanioID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadoTelefono"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultadoTamanioID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resultadoTamanio"
        app:layout_constraintTop_toBottomOf="@+id/resultadoTelefonoID"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/resultadoFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="-60dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="Fecha de Entrega: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/resultadoFechaID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadoTamanio"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultadoFechaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resultadoFecha"
        app:layout_constraintTop_toBottomOf="@+id/resultadoTamanio"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultadoHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="-60dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="Hora de Entrega: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/resultadoHoraID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadoFecha"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultadoHoraID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resultadoHora"
        app:layout_constraintTop_toBottomOf="@+id/resultadoFecha"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Agradeceriamos que calificara su experiencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadoHora"
        tools:ignore="HardcodedText" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@+id/botonCalificar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <Button
        android:id="@+id/botonCalificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="Enviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/calificandoTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Calificando: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonCalificar"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>